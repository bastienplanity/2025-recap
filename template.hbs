<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Aeonik, sans-serif" />
      <mj-section padding="0" />
      <mj-column padding="0" />
      <mj-wrapper padding="0" />
      <mj-text padding="0" />
      <mj-button padding="0" />
      <mj-divider padding="0" />
      <mj-social padding="0" />
      <mj-image padding="0" />
    </mj-attributes>

    <mj-style>
      /* ============================================
         FONTS - Load from CDN
         ============================================ */
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400;
        src: url('https://d2skjte8udjqxw.cloudfront.net/fonts/Inter/Inter-Regular.woff2') format('woff2');
      }

      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        src: url('https://d2skjte8udjqxw.cloudfront.net/fonts/Inter/Inter-Medium.woff2') format('woff2');
      }

      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 600;
        src: url('https://d2skjte8udjqxw.cloudfront.net/fonts/Inter/Inter-SemiBold.woff2') format('woff2');
      }

      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 700;
        src: url('https://d2skjte8udjqxw.cloudfront.net/fonts/Inter/Inter-Bold.woff2') format('woff2');
      }

      @font-face {
        font-family: 'Aeonik';
        font-style: normal;
        font-weight: 400;
        src: url('https://d2skjte8udjqxw.cloudfront.net/fonts/Aeonik/regular.woff2') format('woff2');
      }

      /* ============================================
         RESPONSIVE HERO IMAGES
         ============================================ */
      .hero-section {
        background-image: url('https://planity-assets-shared-lab.s3.eu-west-1.amazonaws.com/pro/mailer/2025_recap/desktop.png') !important;
        background-size: cover !important;
        background-repeat: no-repeat !important;
        background-position: center !important;
        min-height: 620px !important;
        border-radius: 24px !important;
      }

      .hero-section table {
        padding-top: 24px !important;
        padding-bottom: 24px !important;
      }

      .hero-section td {
        padding-top: 24px !important;
        padding-bottom: 24px !important;
      }

      @media only screen and (max-width: 700px) {
        .hero-section {
          background-image: url('https://planity-assets-shared-lab.s3.eu-west-1.amazonaws.com/pro/mailer/2025_recap/mobile.png') !important;
          min-height: 460px !important;
          border-radius: 24px !important;
        }

        .hero-section td[height] {
          height: 460px !important;
        }

        .hero-section table {
          padding-top: 24px !important;
          padding-bottom: 24px !important;
        }

        .hero-section td {
          padding-top: 24px !important;
          padding-bottom: 24px !important;
        }
      }

      /* ============================================
         CARD SHADOW
         ============================================ */
      .card-shadow {
        box-shadow: 0px 2px 4px -1px rgba(26, 27, 31, 0.05);
      }


      /* ============================================
         FOOTER LINKS
         ============================================ */
      .footer-link {
        color: #869098;
        text-decoration: none;
      }

      .footer-link-separator {
        color: #C7CFD7;
      }




      /* ============================================
         RESPONSIVE - Mobile (max-width: 700px)
         ============================================ */
      @media only screen and (max-width: 700px) {
        table.mj-group {
          width: 100% !important;
        }

        table.mj-group td {
          display: block !important;
          width: 100% !important;
          float: none !important;
        }

        .stat-column {
          width: 100% !important;
          max-width: 100% !important;
          display: block !important;
          float: none !important;
          border-left: 1px solid #E6E6E2 !important;
          border-right: 1px solid #E6E6E2 !important;
          border-top: 1px solid #E6E6E2 !important;
          border-bottom: 1px solid #E6E6E2 !important;
        }

        .stats-section table.mj-group {
          width: 100% !important;
        }

        .stats-section table.mj-group td {
          width: 100% !important;
          display: block !important;
          float: none !important;
        }

        .kpi-card {
          width: 100% !important;
        }

        /* Mobile paddings - 24px spacing between blocks */
        .hero-section {
          padding-top: 24px !important;
          padding-bottom: 24px !important;
        }

        .main-wrapper {
          padding: 24px 0 0 0 !important;
        }

        .intro-section {
          padding: 24px 16px !important;
        }

        .personal-stats-section {
          padding: 0 0 0 0 !important;
        }

        .kpi-card-section {
          padding: 0 16px 24px 16px !important;
        }

        .disclaimer-section {
          padding: 0 16px 24px 16px !important;
        }

        .future-section {
          padding: 24px 16px !important;
        }

        .closing-section {
          padding: 24px 16px !important;
        }

        .footer-section {
          padding: 24px 16px !important;
        }
      }
    </mj-style>
  </mj-head>

  <mj-body>
    <mj-section css-class="hero-section" padding="24px 0 24px 0">
      <mj-column>
        <mj-spacer height="620px" />
      </mj-column>
    </mj-section>

    <mj-wrapper padding="24px 0" border="1px solid #E6E6E2" border-radius="24px" background-color="#FFFFFF" css-class="intro-section main-wrapper">
        <mj-section padding="40px 24px 0px">
          <mj-column>
            <mj-text color="#08080B" font-size="20px" font-weight="400" line-height="23px" font-family="Aeonik, sans-serif" align="left" padding="0 0 24px 0">
              {{intro.greeting}}<br />
              {{{nl2br intro.text}}}<br />
              {{intro.closing}}
            </mj-text>
            <mj-divider border-color="#EEF0F2" border-width="1px" padding="0 0 24px 0" />
            <mj-text color="#08080B" font-size="32px" font-weight="400" line-height="36px" font-family="Aeonik, sans-serif" align="left" padding="0 0 24px 0">
              {{stats.title}}
            </mj-text>
          </mj-column>
        </mj-section>

        <mj-section padding="0 24px 32px 24px">
          <mj-group>
            {{#each stats.items}}
            <mj-column
              css-class="stat-column"
              {{#if @first}}border-left="1px solid #E6E6E2" {{/if}}
              {{#if @last}}border-right="1px solid #E6E6E2" {{/if}}
              border-top="1px solid #E6E6E2"
              border-bottom="1px solid #E6E6E2"
              width="33.33%"
              padding="24px"
            >
              <mj-text color="#625DF5" font-size="40px" font-weight="400" line-height="46px" font-family="Aeonik, sans-serif" align="left" padding="0 0 8px 0">{{number}}</mj-text>
              <mj-text color="#202020" font-size="16px" font-weight="400" line-height="18px" font-family="Aeonik, sans-serif" align="left" padding="0">
                {{{nl2br label}}}
              </mj-text>
            </mj-column>
            {{/each}}
          </mj-group>
        </mj-section>

        <mj-section padding="0 24px 32px 24px">
          <mj-column>
            <mj-button
              href="{{stats.button.href}}"
              background-color="#202020"
              color="#FFFFFF"
              border-radius="8px"
              font-size="14px"
              font-weight="500"
              font-family="Inter, sans-serif"
              align="center"
              padding="8px 12px"
            >
              {{stats.button.text}}
            </mj-button>
          </mj-column>
        </mj-section>
    </mj-wrapper>

    <mj-wrapper padding="24px 0 0 0" css-class="main-wrapper">
      <mj-section css-class="personal-stats-section" padding="0 0 0 0">
        <mj-column>
          <mj-text align="center" color="#08080B" font-size="32px" font-weight="400" line-height="36px" font-family="Aeonik, sans-serif" padding="0 0 24px 0">
            {{{nl2br personalStats.title}}}
          </mj-text>
        </mj-column>
      </mj-section>

      {{#each personalStats.kpis}}
      <mj-section css-class="kpi-card-section" padding="0 0 24px 0">
        <mj-column
          background-color="#FFFFFF"
          border="1px solid #E6E6E2"
          border-radius="24px"
          css-class="card-shadow kpi-card"
          width="100%"
          padding="24px"
        >
          <mj-text color="#202020" font-size="60px" font-weight="400" line-height="68px" font-family="Aeonik, sans-serif" align="left" padding="0 0 8px 0">
            <span style="font-size: 60px; line-height: 68px; vertical-align: baseline;">{{number}}</span><span style="font-size: 28px; line-height: 32px; vertical-align: baseline; margin-left: 8px;">{{category}}</span>
          </mj-text>
          <mj-text color="#202020" font-size="20px" font-weight="400" line-height="23px" font-family="Aeonik, sans-serif" align="left" padding="{{#if note}}0 0 16px 0{{else}}0{{/if}}">
            {{{nl2br data}}}
          </mj-text>
          {{#if note}}
          <mj-text color="#869098" font-size="14px" font-weight="400" line-height="16px" font-family="Aeonik, sans-serif" align="left" padding="0">
            {{note}}
          </mj-text>
          {{/if}}
        </mj-column>
      </mj-section>
      {{/each}}

      <mj-section css-class="disclaimer-section" padding="0 0 24px 0">
        <mj-column>
          <mj-text color="#869098" font-size="12px" font-weight="400" line-height="14px" font-family="Aeonik, sans-serif" align="left" padding="0">
            {{personalStats.disclaimer}}
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section border="1px solid #EEF0F2" border-radius="24px" padding="40px 24px" css-class="future-section">
        <mj-column>
          <mj-text color="#08080B" font-size="32px" font-weight="400" line-height="36px" font-family="Aeonik, sans-serif" align="left" padding="0 0 24px 0">
            {{future.title}}
          </mj-text>
          <mj-text color="#08080B" font-size="20px" font-weight="400" line-height="23px" font-family="Aeonik, sans-serif" align="left" padding="0">
            {{future.text}}
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-spacer height="24px" />

      <mj-section background-color="#EEF0F2" border-radius="24px" padding="40px 24px" css-class="closing-section">
        <mj-column>
          <mj-text color="#202020" font-size="20px" font-weight="400" line-height="23px" font-family="Aeonik, sans-serif" align="left" padding="0">
            {{{nl2br closing.text}}}
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>

    <mj-section css-class="footer-section" padding="24px 16px">
      <mj-column>
        <mj-text align="center" color="#869098" font-size="16px" font-weight="500" line-height="24px" font-family="Inter, sans-serif" padding="0 0 4px 0">
          {{footer.social.title}}
        </mj-text>
        <mj-social font-size="15px" icon-size="32px" mode="horizontal" padding="0 0 24px 0">
          {{#each footer.social.links}}
          <mj-social-element name="{{name}}" href="{{href}}" />
          {{/each}}
        </mj-social>
        <mj-text align="center" color="#869098" font-size="16px" font-weight="500" line-height="24px" font-family="Inter, sans-serif" padding="0 0 8px 0">
          {{footer.appStores.title}}
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section padding="0 16px 32px 16px">
      <mj-group>
        {{#each footer.appStores.stores}}
        <mj-column>
          <mj-image src="{{image}}" alt="{{name}}" width="107px" href="{{href}}" />
        </mj-column>
        {{/each}}
      </mj-group>
    </mj-section>

    <mj-section padding="0 16px 32px 16px">
      <mj-column>
        <mj-text align="center" color="#869098" font-size="12px" font-weight="400" line-height="16px" font-family="Inter, sans-serif" padding="24px 0 8px 0">
          {{footer.copyright.text}}<br />
          {{footer.copyright.email}}<br />
          {{footer.copyright.phone}}
        </mj-text>
        <mj-text align="center" color="#869098" font-size="12px" font-weight="400" line-height="16px" font-family="Inter, sans-serif" padding="0">
          {{#each footer.links}}
          {{#if @index}}<span class="footer-link-separator"> â€¢ </span>{{/if}}
          <a href="{{href}}" class="footer-link">{{text}}</a>
          {{/each}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>

